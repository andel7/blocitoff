 <h1>Your list:</h1>
 <% if @list.nil? %>
  <h2>You suck you don't have any lists</h2>
   <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
 <% else %>
    <h2><%= @list.title %> </h2>
    
      <%= link_to "Delete", list_path, class: 'btn btn-danger', method: :delete  %><%= link_to "Edit", edit_list_path, class: 'btn btn-info'  %>
    <h3>Add to-do item</h3>
        <%= render :partial => "items/form" %>
    <ol>
      <%= render :partial => "items/item", :collection => @current_items_in_the_list, :as => :item %>
    </ol>

 <% end %>